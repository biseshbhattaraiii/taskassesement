doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=, initial-scale=1.0")
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous")
        title KYC Form
    body 
        div(class="container")
            h1 KYC FORM 
            if success
                div(class="alert alert-success alert-dismissible fade show" role="alert") #{success}
                    button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                            span(aria-hidden="true") X
            if errors 
                each error , e in errors 
                    div(class="alert alert-danger alert-dismissible fade show" role="alert") #{error.msg}
                        button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                            span(aria-hidden="true") X
            form(action="/submit" method="POST")
                div(class="form-group")
                    label(for="username" class="form-label") Name
                    input(type="text" class="form-control" name="name" id="name")
                div(class="form-group")
                    label(for="email" class="form-label") Email
                    input(type="text" class="form-control" name="email" id="email")
                div(class="form-group")
                    label(for="phnumber" class="form-label") PhoneNumber
                    input(class="form-control" name="phnumber" id="phnumber")
                div(class="form-group")
                    label(for="gender" class="form-label") Gender 
                        br
                        br
                        label(for="male" class="form-label") Male 
                            input(class="form-control" value="Male" name="gender" type="radio")
                            label(for="male" class="form-label") Female 
                            input(class="form-control" value="Female" name="gender" type="radio") 
                            label(for="male" class="form-label") Others
                            input(class="form-control" value="Others" name="gender" type="radio") 
                div(class="form-group")
                    label(for="hobbies" class="form-label") Choose your hobbies
                        br
                        br
                        label(for="reading" class="form-label") Reading books 
                        input(class="form-control" value="reading" name="hobbies" type="checkbox")
                        label(for="dancing" class="form-label") Dancing  
                        input(class="form-control" value="dancing" name="hobbies" type="checkbox") 
                        label(for="music" class="form-label") Listening to music
                        input(class="form-control" value="music" name="hobbies" type="checkbox")
                        label(for="travel" class="form-label") Travel/Riding
                        input(class="form-control" value="travel" name="hobbies" type="checkbox")
                        label(for="nohobby" class="form-label") I have no hobbies :(
                        input(class="form-control" value="nohobbies" name="hobbies" type="checkbox") 
                button(type="submit" class="btn btn-primary") Submit
        script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous")